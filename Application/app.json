{
  "expo": {
    "name": "chamapay-app",
    "slug": "chamapay-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/chamapay-logo.png",
    "scheme": "chamapayapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/2048.png",
      "resizeMode": "contain",
      "backgroundColor": "#f1fcfa"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jeff.chamapay",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely access your wallet seed phrase",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/chamapay-logo.png",
        "backgroundColor": "#f1fcfa"
      },
      "splash": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#f1fcfa"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.jeff.chamapay",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "*.chamapay.app",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "chamapayapp"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "com.jeff.chamapay"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#f1fcfa"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Use Face ID to securely access your wallet seed phrase"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true,
            "minSdkVersion": 26
          }
        }
      ],
      "expo-secure-store",
      "expo-apple-authentication",
      "expo-web-browser",
      "expo-notifications",
      "@react-native-community/datetimepicker",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f20febb9-ea93-4de4-8e4d-ad1e6c5808d9"
      }
    }
  }
}
